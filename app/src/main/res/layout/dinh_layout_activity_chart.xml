<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_chart"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_above="@+id/layoutActionButton"
       android:layout_marginBottom="@dimen/dp10"
       android:background="@color/transparent"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.jjoe64.graphview.GraphView
           android:background="@color/bg_chart"
           android:layout_marginHorizontal="30dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/graph" />
       <View
           android:id="@+id/viewLine"
           android:layout_marginHorizontal="30dp"
           android:layout_centerInParent="true"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
   </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutActionButton"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:rv_strokeColor="@color/white"
                app:rv_strokeWidth="1dp"
                app:rv_cornerRadius="5dp"
                android:text="5 phút"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_height="40dp"/>
            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:rv_strokeColor="@color/white"
                app:rv_strokeWidth="1dp"
                app:rv_cornerRadius="5dp"
                android:text="2000$"
                android:drawableLeft="@drawable/ic_tru"
                android:paddingHorizontal="@dimen/dp15"
                android:drawableRight="@drawable/ic_cong"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_height="40dp"/>
        </LinearLayout>
        <!--end-->

        <LinearLayout
            android:layout_marginVertical="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:id="@+id/btnGiam"
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:rv_cornerRadius="5dp"
                android:text="Giảm"
                app:rv_backgroundColor="@color/giam_chart"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_height="50dp"/>
            <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                android:id="@+id/btnTang"
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:rv_cornerRadius="5dp"
                android:text="Tăng"
                app:rv_backgroundColor="@color/tang_chart"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp20"
                android:layout_height="50dp"/>
        </LinearLayout>
        <!--end-->
    </LinearLayout>

</RelativeLayout>